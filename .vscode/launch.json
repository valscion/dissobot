{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Test",
      "type": "node",
      "request": "launch",
      "env": {
        "TZ": "UTC"
      },
      "runtimeArgs": [
        "--inspect-brk",
        "./node_modules/.bin/jest",
        "--runInBand",
        "--watch",
        "${relativeFile}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}
